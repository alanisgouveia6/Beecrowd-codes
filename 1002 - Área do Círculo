using System;

class Program
{
    static void Main(string[] args)
    {
        // Valor de Pi
        double pi = 3.14159;

        // Leitura do raio
        double raio = double.Parse(Console.ReadLine());

        // Cálculo da área
        double area = pi * raio * raio;

        // Impressão do resultado conforme especificado
        Console.WriteLine($"A={area:F4}");
    }
}
